<launch>

	 <arg name="user" default="sam" />
	 <arg name="bag_dir" default= "/home/$(arg user)/cued-masters/src/qbo_sigproc/human_detection/bagfiles/" />
	 <arg name="bag_file" default="raws.bag" />
 	 <arg name="bag_path" default= "$(arg bag_dir)$(arg bag_file)" />

      <include file="$(find openni_launch)/launch/openni.launch">
        <arg name="load_driver" value="false"/>
      </include>

	<node pkg="rosbag" type="play" name="rosbag" output="screen" args="-l --clock $(arg bag_path)"/>
#add '-r 0.1' to the args field to slow down the data stream by 10
	<node pkg="image_view" type = "image_view" name="depth_image" args="image:=/camera/depth/image"/>

</launch>
